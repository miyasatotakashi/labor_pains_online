<%= form_with(model: partner) do |form| %>
  <% if partner.errors.any? %>
    <div id="error_explanation", class= "center_tag">
      <h2><%= pluralize(partner.errors.count, "件") %>のエラーが発生しました。</h2>

      <ul>
        <% partner.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field center_mail">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "emailアドレス入力" %>
  </div>

  <%= form.hidden_field :certification_code, :value => @certification_code %>
  <%= form.hidden_field :mother_id, :value => current_user.id %>


  <div class="actions">
    <%= form.submit "招待コードを送信" %>
  </div>
<% end %>
